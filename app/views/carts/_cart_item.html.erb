<div class="cart-items-wrapper">
  <% if cart.items.length >0 %>

    <% cart.items.each do |item| %>
      <div class="cart-item" data-id=<%= item.id %>>
        <div class="cart-item__picture">
          <img src=<%= item.image_url %> alt='image'>
        </div>
        <div class="cart-item__content">
          <p class="cart-item__content--title"><%= item.title %></p>
          <p><%= item.price %>â‚¬</p>
          <p>
            <span class="cart-item__content--quantity">QuantitÃ© :</span>
            <span class='cart-item__content--quantity-num'>
              <%= JoinTableItemCart.find_by(item: item, cart: cart).quantity %>
            </span>
          </p>

          <%# Fonction d'ajout ou retrait de quantitÃ© : Moins de 1 = Supprimer l'article %>
          <% if (JoinTableItemCart.find_by(item: item, cart: cart).quantity - 1 <= 0) %>
            <div class="cart-item__content--options">
              <%= render(
                partial: 'remove_btn',
                locals: { id: item.id }
              ) %>
              <%= link_to "+", join_table_item_cart_path(id: item.id, increment: 1), method: "patch",class:"change_quantity", remote: true %>
            </div>
          <% else %>
            <%# InsÃ©rer ici fonction d'incrÃ©ment de quantitÃ© %>
            <div class="cart-item__content--options">
              <%= render(
                partial: 'minus_btn',
                locals: { id: item.id }
              ) %>
              <%= link_to "+", join_table_item_cart_path(id: item.id, increment: 1), method: "patch",class:"change_quantity", remote: true %>
            </div>
          <% end %>

        </div>
      </div>
    <% end %>

  <% else %>
    <p> Le panier est vide. ðŸ˜¿ </p>
    <%= link_to "Retour Ã  l'accueil", root_path, class:"btn" %>
  <% end %>
</div>

